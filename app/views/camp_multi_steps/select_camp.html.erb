<div class = "progress">
  <div class = "progress-bar progress-bar-stripped progress-bar-animated" role = "progressbar" aria-label = "Animated striped example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
</div>

<h1>Welcome To Camp Encounters</h1>
<h3>Please Select The Following Available Camp</h3>
<% form_for @camp, url: next_wizard_path, method: "PUT" do |f| %>
  <% @camps.each do |camp|%>
    <div>
      <%= f.radio_button :id, camp.id, :checked => 'checked' %>
      <%= f.label :id, camp.title %>
    </div>
  <%end%>
  <%= f.submit 'select' %>
<%end%>

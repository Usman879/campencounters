<div class = "progress">
  <div class = "progress-bar progress-bar-stripped progress-bar-animated" role = "progressbar" aria-label = "Animated striped example" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>
</div>
<h2>Personal Information</h2>
<% form_for @user url: next_wizard_path, method: "PUT" do |f|%>
  <%= f.hidden_field :user_id, value: @user.id %>
  <% @users.each do |user|%>
    <div>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>

    <div>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>

  <%end%>
  <%= f.submit "Continue" %>
  <%= link_to "Skip", next_wizard_path %>
  <%= link_to "Previous Page", previous_wizard_path %>

<%end%>

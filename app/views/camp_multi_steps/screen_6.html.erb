<div class = "progress">
  <div class = "progress-bar progress-bar-stripped progress-bar-animated" role = "progressbar" aria-label = "Animated striped example" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%"></div>
</div>

<h2>Your Gender</h2>
<% form_for @user url: next_wizard_path, method: "PUT" do |f|%>
  <%= f.hidden_field :user_id, value: @user.id %>
  <% @users.each do |user|%>
    <div>

      <%= f.radio_button :gender, "other" %><br/>
      <%= f.label :Other %><br/>

      <%= f.radio_button :gender, "male" %><br/>
      <%= f.label :Male %><br/>

      <%= f.radio_button :gender, "female" %><br/>
      <%= f.label :Female %><br/>

    </div>  
  <%end%>
  <%= f.submit "Continue" %>
  <%= link_to "Skip", next_wizard_path %>
  <%= link_to "Previous Page", previous_wizard_path %>
<%end%>

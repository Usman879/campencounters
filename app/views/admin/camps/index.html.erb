<div class="container-fluid w-75 border rounded shadow mt-5 p-4 ">
 <h1>Listing Camps</h1>
  
  <table>
    <form action="<%= admin_camps_path %>">
      <div class="row">
        <div class="col">
          <div class="input-group input-group-sm" style="width: 250px;">
            <input type="text" name="search_key">
            <button type="submit">Search</button>
          </div>
        </div>
        <div class="col">
          <div class="input-group input-group-sm" style="width: 250px; margin-left: 80%; ">
            <%= link_to "Add Camp", new_admin_camp_path, class: "btn btn-success " %></td>
          </div>
          <div  class="input-group input-group-sm" style="width: 250px; margin-left: 74%; ">
            <%= link_to "Export Report", admin_camps_path(format: :csv), class: "btn btn-success mb-4" %>
         </div>
        </div>
     </div>
   </form>
   <thead>
      <tr>
        <th><%=sortable "Camp's ID" %></th>
        <th><%=sortable "Title" %></th>
        <th><%=sortable "Camp Locations" %></th>
        <th><%=sortable "Status" %></th>
        <th><%=sortable "Registration Date" %></th>
        <th colspan="3">Actions</th>
      </tr>
   </thead>
     
   <tbody>
     <% @camps.each do |camp|%>
     <tr>
        <td><%= camp.id %></td>
        <td><%= camp.title %></td>
        <td><%= camp.locations %></td>
        <td><%= camp.camp_status %></td>
        <td><%= camp.applicant_registration_start_date %></td>
        <td><%= link_to "View |", admin_camp_path(camp) %></td>
        <td><%= link_to "Edit |", edit_admin_camp_path(camp) %></td>
        <td><%= link_to "Delete ", admin_camp_path(camp) , method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <%end%>
   </tbody>
  </table>
  <%= paginate @camps %>
</div>
<div class="container-fluid w-75 border rounded shadow mt-5 p-4 ">
 <h1>Listing Users</h1>

  <table>
    <form action="<%= admin_users_path %>">
      <div class="row">
		
        <div class="col">
          <div class="input-group input-group-sm" style="width: 250px;">
            <input type="text" name="search_key">
            <button type="submit">Search</button>
          </div>
        </div>

        <div class="col">
          <div class="input-group input-group-sm" style="width: 250px; margin-left: 80%; ">
            <%= link_to "Add User", new_admin_user_path, class: "btn btn-success "%></td>
          </div>
          <div  class="input-group input-group-sm" style="width: 250px; margin-left:74%; " >
            <%= link_to "Export Users", admin_users_path(format: :csv), class: "btn btn-success mb-4" %>
          </div>
        </div>

      </div>
    </form>

    <thead>
      <tr>
        <th><%= sortable "User's ID" %></th>
        <th><%= sortable "First Name" %></th>
        <th><%= sortable "Last Name" %></th>
        <th><%= sortable "Phone Number" %></th>
        <th><%= sortable "Country" %></th>
        <th><%= sortable "Email" %></th>
        <th><%= sortable "Role" %></th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
 
    <tbody>
     <% @users.each do |user|%>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.country %></td>
        <td><%= user.email %></td>
        <td><%= user.type %></td>
        <td><%= link_to "View |", admin_user_path(user) %></td>
        <td><%= link_to "Edit |", edit_admin_user_path(user) %></td>
        <td><%= link_to "Delete ", admin_user_path(user) , method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
     <%end%>
   </tbody>

  </table>
    <%= paginate @users%>
</div>

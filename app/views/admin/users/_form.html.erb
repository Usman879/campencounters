<div class="container-fluid w-50 border rounded shadow mt-5 p-4 bg-light ">
  <div class = "text-center">
    <%= render 'profile' %>
  </div>
  <br>

  <%= form_for [:admin, @user] do |f| %>

  <div class="form-outline mb-4">
    <%= f.file_field :image %><br>
    <%= f.label :Upload_Image %><br/>
    <br>
  </div>
    
  <div class="row mb-4">
    
    <div class="col">
      <div class="form-outline" >
        <%= f.label :first_name %><br/>
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %><br>
        <br>
      </div>
    </div>

    <div class="col">
      <div class="form-outline" >
        <%= f.label :last_name %><br/>
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %><br>
        <br>
      </div>
    </div>

  </div>


    <div class="form-outline mb-4">
      <%= f.label :phone_number %><br/>
      <%= f.text_field :phone_number, autofocus: true, class: "form-control" %><br>
      <br>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :country %><br/>
      <%= f.country_select :country , {}, class: "dropdown-item" %><br>
      <br>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %><br>
      <br>
    </div>

    <div class="form-outline mb-4">
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: "form-control" %>
      <br>
    </div>

    <div class="text-center">
      <%= f.submit class: "btn btn-primary mb-4"%>
      <% end %>
    </div>
</div>
